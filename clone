                 headers={"Authorization":f"Bearer {tok}"},
                 timeout=15, verify=os.environ["REQUESTS_CA_BUNDLE"]).json()
ins = (sig.get("signature") or {}).get("inputs") or []
print("Inputs esperados (nombre:type):")
for i in ins: print("-", i["name"], ":", i.get("type"))
PY






